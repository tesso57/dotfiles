{
    "permissions": {
        "allow": [
            "Bash(npm run lint)",
            "Bash(npm run test:*)",
            "Bash(grep:*)",
            "Bash(find:*)",
            "Bash(git fetch:*)",
            "Bash(ls:*)",
            "Read(~/.zshrc)",
            "Read(~/.zprofile)"
